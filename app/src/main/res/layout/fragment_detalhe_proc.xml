<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetalheProcFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeProc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10101012 - Consulta Ambulatorial"
                android:textAlignment="center"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvNomeConv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convênio:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txtNomeConv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvValorMedic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Porte Médico:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txtValorPorteM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvValorCo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor C.O.:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txtValorCo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvValorFilme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Filme:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txtValorFilme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/tvValorTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Total:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txtValorTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btnVoltarProcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voltar"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>